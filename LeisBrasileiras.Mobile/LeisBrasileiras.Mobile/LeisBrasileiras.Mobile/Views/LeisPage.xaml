<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeisBrasileiras.Mobile.Views.LeisPage"
             xmlns:vm="clr-namespace:LeisBrasileiras.Mobile.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:LeisViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="10">            
            <Entry HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource Primary}" />
            <Button Text="P"/>
            
        </StackLayout>
    </Grid>
</ContentPage>